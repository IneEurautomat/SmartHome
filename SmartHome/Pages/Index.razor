@page "/"
@using Microsoft.AspNetCore.Components

<h1>Smart Home Controller</h1>

<div class="container">
    <h2>Smart Home Dashboard</h2>
    <div class="device-control">
        
        <button class="menu-button" @onclick='() => NavigateTo("tv")'>
            TV <img src="images/icons/tv.png" alt="TV" class="icon" />
        </button>
    </div>
    <div class="device-control">
        <button class="menu-button" @onclick='() => NavigateTo("light")'>
            Light <img src="images/icons/light.png" alt="Light" class="icon" />
        </button>
    </div>
    <div class="device-control">
        <button class="menu-button" @onclick='() => NavigateTo("thermostat")'>
            Thermostat <img src="images/icons/thermostat.png" alt="Thermostat" class="icon" />
        </button>
    </div>
    <div class="device-control">
        <button class="menu-button" @onclick='() => NavigateTo("security")'>Security Camera</button>
    </div>
    <div class="device-control">
        <button class="menu-button" @onclick='() => NavigateTo("curtain")'>
            Curtain <img src="images/icons/curtain.png" alt="Curtain" class="icon" />
        </button>
    </div>
    <div class="device-control">
        <button class="menu-button" @onclick='() => NavigateTo("musicplayer")'>
            Music Player <img src="images/icons/musicplayer.png" alt="Music Player" class="icon" />
        </button>
    </div>
    <div class="device-control">
        <button class="menu-button" @onclick='() => NavigateTo("coffeemachine")'>
            Coffee Machine <img src="images/icons/coffeemachine.png" alt="Coffee Machine" class="icon" />
        </button>
    </div>
    <div class="device-control">
        <button class="menu-button" @onclick='() => NavigateTo("settings")'>Settings</button>
    </div>
    <div class="device-control">
        <button class="menu-button" @onclick='() => NavigateTo("add-device")'>Add Device</button>
    </div>

</div>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void NavigateTo(string page)
    {
        NavigationManager.NavigateTo($"/{page}");
    }
}
